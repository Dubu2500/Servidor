<div class="letter-page">
  <div class="letter-paper">
    <h1>Carta para Profe Santa</h1>

    {{#if error}}
      <p class="letter-message-error">{{error}}</p>
    {{/if}}

    {{#if success}}
      <p class="letter-message-success">{{success}}</p>
    {{/if}}

    <form action="/enviar-carta" method="POST">
      <div class="letter-field">
        <label for="correoSanta">Correo del Profe :</label>
        <input
          type="email"
          id="correoSanta"
          name="correoSanta"
          placeholder="tucorreo@"
          value="{{correoSanta}}"
          required
        />
      </div>

      <div class="letter-field">
        <label for="carta">Carta:</label>
        <textarea
          id="carta"
          name="carta"
          rows="10"
          required
        >{{carta}}</textarea>
      </div>

      <div class="letter-actions">
        <button type="submit">Enviar carta</button>
      </div>
    </form>
  </div>
</div>
